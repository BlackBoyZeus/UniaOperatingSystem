{
  "watch": [
    "src/**/*"
  ],
  "ext": ".ts,.js,.json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts", 
    "src/tests/**/*",
    "node_modules/**/*",
    "dist/**/*"
  ],
  "exec": "ts-node ./src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "events": {
    "restart": "echo \"[nodemon] App restarted due to changes\""
  },
  "delay": "1000",
  "verbose": true
}